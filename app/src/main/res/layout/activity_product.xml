<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/product_code_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/product_code_view"
            android:layout_width="227dp"
            android:layout_height="74dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scanner_button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_code_hint"
            app:icon="@drawable/ic_baseline_search_24px" />
  </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/product_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/product_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>
